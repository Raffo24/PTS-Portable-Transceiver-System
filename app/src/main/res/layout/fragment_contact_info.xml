<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContactInfo">

    <RelativeLayout
        android:id="@+id/nome_info_contact_layout"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nome_info_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="10"
            android:text="TextView"
            android:textSize="40dp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_info_contact"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="@color/white"
        android:text="CHAT"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toStartOf="@+id/call_info_contact"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_info_contact_layout"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/call_info_contact"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginTop="134dp"
        android:backgroundTint="@color/white"
        android:text="CALL"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chat_info_contact"
        app:layout_constraintTop_toBottomOf="@+id/nome_info_contact_layout"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:text="ID: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_info_contact" />

    <TextView
        android:id="@+id/id_info_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/chat_info_contact" />
</androidx.constraintlayout.widget.ConstraintLayout>